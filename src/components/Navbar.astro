---
const links = [
  { href: '/#about', text: 'About' },
  { href: '/#projects', text: 'Projects' },
  { href: '/#experience', text: 'Experiences' },
  { href: '/#contact', text: 'Contact' },
];
---
<style>
  .link-underline {
    border-bottom-width: 0;
    background-image: linear-gradient(transparent, transparent), linear-gradient(#fff, #fff);
    background-size: 0 3px;
    background-position: 0 100%;
    background-repeat: no-repeat;
    transition: background-size .5s ease-in-out;
    padding-bottom: 3px; /* Adjust this value to increase the space */
  }
  
  .link-underline-black {
    background-image: linear-gradient(transparent, transparent), linear-gradient(#F2C, #F2C);
  }
  
  .hover-parent:hover .link-underline {
    background-size: 100% 3px;
    background-position: 0 100%;
  }
</style>

<nav class=" p-4 flex flex-row justify-between">
  <div>Logo</div>
  <div class="flex gap-8">
      {links.map(link => (
        <div class="hover-parent">
          <a href={link.href} class="link link-underline link-underline-black">{link.text}</a>
        </div>
      ))}
  </div>
</nav>
